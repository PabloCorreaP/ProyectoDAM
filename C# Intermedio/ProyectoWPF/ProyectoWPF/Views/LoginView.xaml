<base:BaseView x:Class="ProyectoWPF.View.LoginView"
        x:TypeArguments="vm:LoginViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF.View"
        xmlns:base="clr-namespace:ProyectoWPF.Views.Base"
        xmlns:vm="clr-namespace:ProyectoWPF.ViewModel"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="User name"/>
            <TextBlock x:Name="TextBoxUserName" Text="{Binding Username}"/>

            <Label Content="Paswprd"/>
            <TextBlock x:Name="TextBoxPassword" Text="{Binding Password}"/>

            <Button x:Name="ButtonLogin" Content="Login" Command="{Binding DoLoginCommand}"/>


        </StackPanel>


    </Grid>
</base:BaseView>

